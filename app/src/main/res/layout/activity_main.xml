<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_gravity="center"
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            />

    <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/button"
            android:text="continuationTest"/>
    <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_start_new"
            android:text="StartNew"
            />
    <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_start_test_activity"
            android:text="ViewTest"
            />
    <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_start_leakcanry_activity"
            android:text="LeackCanary"
            />
    <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/etId"
            android:text="1"
            android:hint="id"
            android:layout_height="wrap_content"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:text="Tom"
            android:layout_marginRight="50dp"
            android:id="@+id/etname"
            android:hint="name"
            android:layout_height="wrap_content"/>
    <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_protobuf_test"
            android:text="ProtoBufTest"
            />
    <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/btn_array_test"
            android:text="ArrayTest"
            />
    <LinearLayout
            android:layout_width="300dp"
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_height="50dp">
        <View
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        <View
                android:layout_width="match_parent"
                android:background="@android:color/holo_blue_dark"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>